<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textWebViewer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="Select a Website"
            android:textColor="@android:color/background_dark"
            android:textSize="32sp"
            android:typeface="serif" />

        <ImageView
            android:id="@+id/imageUcsd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            app:srcCompat="@drawable/ucsd_logo" />

        <Button
            android:id="@+id/buttonUcsd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="UCSD Ext"
            android:textColor="@android:color/background_dark"
            android:typeface="serif" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_marginTop="10sp"
            app:srcCompat="@drawable/git_logo" />

        <Button
            android:id="@+id/buttonGit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Georgia Tech"
            android:textColor="@android:color/background_dark"
            android:typeface="serif" />

    </LinearLayout>

</RelativeLayout>